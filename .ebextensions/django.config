option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: iCardioAI/wsgi.py
  - namespace: aws:elasticbeanstalk:command
    option_name: Timeout
    value: 1000
      
container_commands:
  01_migrate:
    command: "python manage.py migrate"
    leader_only: true
  02_static:
    command: "python manage.py collectstatic --noinput"
    leader_only: true

packages:
  yum:
    gcc-c++: []
    make: []
    openssl-devel: []
    git: []
    python36-devel: []
    postgresql96-devel: []
